<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:colorControlNormal">#7E57C2</item>
        <item name="android:colorControlActivated">#5E35B1</item>
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5E35B1</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="CardSecondaryTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#5E35B1</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#7B1FA2</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources> 